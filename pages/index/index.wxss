.index-page {
  padding: 0 20rpx;
}
.change {
  padding: 20rpx;
  color: #8995a1;
}
.change navigator {
  display: inline-flex;
  align-items: center;
}
.change .icon-down {
  font-size: 12rpx;
  transform: translateY(25%);
}
.input-area {
  width: 100%;
  padding: 15px;
  background-color: #f5f5f5;
  border-radius: 4px;
  border: 1px solid #eee;
  position: relative;
  margin-top: 25rpx;
}
.input-area .clear {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
}

.translation-area {
  width: 100%;
  padding: 15px;
  min-height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 4px;
  border: 1px solid #eee;
}